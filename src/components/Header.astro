---
export interface Props {
    active?: 'Home' | 'Über mich' | 'Projekte' | 'Kontakt';
    location?: string;
}

const { location = '/' } = Astro.props;

const menus = [
    { name: 'Home', href: location },
    { name: 'Über mich', href: `${location}timeline` },
    { name: 'Projekte', href: `${location}#portfolio` },
    { name: 'Kontakt', href: `${location}contact` },
].map((menu) => {
    return {
        ...menu,
        active: Astro.props.active === menu.name,
    };
});
---

<header
    class="header fixed top-0 right-0 left-0 z-20 w-full px-4 py-3 transition-all duration-300 ease-out md:top-6 md:right-auto md:left-1/2 md:w-full md:max-w-4xl md:-translate-x-1/2 md:px-6 md:py-0"
    style="visibility: hidden"
>
    <div
        class="header-bg group relative z-10 mx-auto flex items-center justify-between rounded-none border border-t-0 border-r-0 border-l-0 border-white/10 px-4 py-4 md:rounded-2xl md:border md:px-8 md:py-5"
    >
        <a href="/" class="logo scroll-to">
            <p class="text-lg font-bold text-white transition-all duration-300 md:text-xl">Thomas Breindl</p>
        </a>

        <btn class="menu flex cursor-pointer items-center space-x-2 md:space-x-4" style="cursor: pointer">
            <span
                class="menu-text hidden text-xs font-bold tracking-wider text-white/90 uppercase transition-all duration-300 md:block md:text-sm"
                >Menu</span
            >
            <div class="menu-icon">
                <div class="menu-lines">
                    <span class="line line-1"></span>
                    <span class="line line-2"></span>
                    <span class="line line-3"></span>
                </div>
            </div>
        </btn>
    </div>
</header>

<nav
    id="nav"
    aria-label="loader"
    class="fixed inset-0 z-50 h-0 overflow-hidden transition-all duration-500 ease-in-out"
>
    <div class="menu-bg h-full w-full bg-black/95 backdrop-blur-xl"></div>
</nav>

<nav id="nav-content" aria-label="menu" class="fixed inset-0 z-50">
    <div class="flex h-full w-full items-center justify-center">
        <div class="content mx-auto flex max-w-4xl flex-col items-center justify-center px-4 text-center sm:px-6">
            <h5
                class="mb-8 text-base font-semibold tracking-wider text-white/60 uppercase opacity-0 transition-opacity duration-400 md:mb-12 md:text-xl"
            >
                Menu
            </h5>
            <ul id="mi" class="flex w-full flex-col gap-6 text-center">
                {
                    menus.map((menu) => (
                        <li class="menu-item transform text-stone-700 opacity-0 transition-all duration-400">
                            <a
                                href={menu.href}
                                id={menu.name}
                                class={`menu-link block text-4xl font-bold text-white transition-all duration-500 sm:text-5xl md:text-6xl lg:text-7xl ${menu.active ? 'menu-link-active text-white' : 'text-white/80'}`}
                            >
                                <span class="menu-link-text">{menu.name}</span>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>

<btn
    class="close fixed top-8 right-4 z-60 flex hidden -translate-y-4 cursor-pointer items-center justify-center opacity-0 transition-all duration-300 ease-out md:top-10 md:right-10"
    type="button"
    aria-label="Close menu"
    style="cursor: pointer"
>
    <div class="close-container">
        <div class="close-bg"></div>
        <div class="close-content">
            <span class="close-text">Close</span>
            <div class="close-icon">
                <span class="close-line close-line-1"></span>
                <span class="close-line close-line-2"></span>
            </div>
        </div>
    </div>
</btn>

