<script>
    import { timeline, stagger, glide } from 'motion';
    import type { TimelineDefinition } from 'motion';

    const scrollTriggers = document.querySelectorAll<HTMLElement>('.scroll-trigger, button.scroll-to, a.projects');
    scrollTriggers.forEach((el) =>
        el.addEventListener('click', (event) => {
            (event as Event & { preventDefault?: () => void }).preventDefault?.();
            scrollToPortfolio();
        }),
    );

    function scrollToPortfolio() {
        const portfolio: HTMLElement | null = document.querySelector('#portfolio');
        if (!portfolio) return;
        const stickyHeader = document.querySelector('header');
        const headerOffset = stickyHeader instanceof HTMLElement ? stickyHeader.offsetHeight : 150;
        const rect = portfolio.getBoundingClientRect();
        const targetTop = rect.top + window.pageYOffset - headerOffset;
        window.scrollTo({ top: targetTop, behavior: 'smooth' });
    }

    const createSpan = (text: string | null) => {
        const node = document.createElement('span');
        node.textContent = text;
        return node;
    };
    const splitByLetter = (text: string | null | undefined) => (text ? [...text].map(createSpan) : []);

    const { matches: motionOK } = window.matchMedia('(prefers-reduced-motion: no-preference)');

    window.addEventListener('load', () => {
        if (!motionOK) return;

        // Split each word into letters while keeping words on separate lines
        const words = document.querySelectorAll<HTMLElement>('.title .word');
        words.forEach((wordEl) => {
            const nodes = splitByLetter(wordEl.textContent);
            wordEl.textContent = '';
            nodes.forEach((node) => {
                if (node.textContent === ' ') {
                    wordEl.append(' ');
                    return;
                }
                (node as HTMLElement).classList.add('letter');
                (node as HTMLElement).style.display = 'inline-block';
                wordEl.appendChild(node);
            });
        });

        const letters = document.querySelectorAll<HTMLElement>('.title .letter');

        const sequence: TimelineDefinition = [
            [
                Array.from(letters),
                {
                    opacity: [0, 1],
                    transform: ['translate3d(0, 50px, 0)', 'translate3d(0, 0, 0)'],
                    filter: ['blur(5px)', 'blur(0)'],
                },
                { delay: stagger(0.05) },
            ],
            [
                '.header-light',
                {
                    opacity: [0, 1],
                    transform: ['translate3d(0, 50px, 0)', 'translate3d(0, 0, 0)'],
                    filter: ['blur(5px)', 'blur(0)'],
                },
                { at: 0.75 },
            ],
            [
                '.links',
                {
                    opacity: [0, 1],
                    transform: ['translate3d(0, 25px, 0)', 'translate3d(0, 0, 0)'],
                    filter: ['blur(5px)', 'blur(0)'],
                },
                { at: 1.25 },
            ],
            [
                '.animate',
                {
                    opacity: [0, 1],
                    transform: ['translate3d(0, 25px, 0)', 'translate3d(0, 0, 0)'],
                    filter: ['blur(5px)', 'blur(0)'],
                },
                { at: 1.5 },
            ],
        ];

        timeline(sequence, { defaultOptions: { easing: glide(), duration: 1, delay: 0.2 } });
    });
</script>

