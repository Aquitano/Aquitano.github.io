---
import Icon from 'astro-icon';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Kontact | Breindl Thomas" active="Kontakt">
    <body>
        <div class="relative flex items-center justify-center min-h-screen bg-white sm:items-center sm:pt-0">
            <div class="w-full max-w-6xl mx-auto sm:px-6 lg:px-8">
                <div class="mt-8 overflow-hidden">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="p-6 bg-gray-100 dark:bg-gray-800 sm:rounded-lg">
                            <h1
                                class="text-4xl sm:text-5xl text-gray-800 dark:text-white font-extrabold tracking-tight mb-4"
                            >
                                Kontaktieren Sie mich
                            </h1>
                            <p class="text-normal text-lg sm:text-2xl font-medium text-gray-600 dark:text-gray-400">
                                Füllen Sie das Formular aus, um ein Gespräch zu beginnen
                            </p>

                            <div class="flex items-center mt-8 text-gray-600 dark:text-gray-400">
                                <svg
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    viewBox="0 0 24 24"
                                    class="w-8 h-8 text-gray-500"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <div class="ml-4 text-md tracking-wide font-semibold w-40">Passau, Deutschland</div>
                            </div>

                            <div class="flex items-center mt-4 text-gray-600 dark:text-gray-400">
                                <svg class="w-8 h-8 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                                    <Icon name="mdi:twitter" style={'width: 2rem'} />
                                </svg>
                                <div class="ml-4 text-md tracking-wide font-semibold w-40">
                                    <a
                                        href="https://twitter.com/BreindlThomas"
                                        target="_blank"
                                        rel="noopener noreferrer">@BreindlThomas</a
                                    >
                                </div>
                            </div>

                            <div class="flex items-center mt-4 text-gray-600 dark:text-gray-400">
                                <svg class="w-8 h-8 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                                    <Icon name="mdi:github" style={'width: 2rem'} />
                                </svg>
                                <div class="ml-4 text-md tracking-wide font-semibold w-40">
                                    <a href="https://github.com/Aquitano" target="_blank" rel="noopener noreferrer"
                                        >Aquitano</a
                                    >
                                </div>
                            </div>

                            <div class="flex items-center mt-4 text-gray-600 dark:text-gray-400">
                                <svg
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    viewBox="0 0 24 24"
                                    class="w-8 h-8 text-gray-500"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                <div class="ml-4 text-md tracking-wide font-semibold w-40">
                                    <a href="mailto:ThomasBreindl@proton.me">ThomasBreindl@proton.me</a>
                                </div>
                            </div>
                        </div>

                        <form
                            class="p-6 flex flex-col justify-center space-y-4"
                            data-netlify-recaptcha="true"
                            data-netlify="true"
                        >
                            <div class="flex flex-col">
                                <label for="name" class="hidden">Vollständiger Name</label>
                                <input
                                    type="text"
                                    name="name"
                                    id="name"
                                    placeholder="Vollständiger Name"
                                    class="w-full py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white font-semibold focus:border-indigo-500 focus:outline-none"
                                />
                            </div>

                            <div class="flex flex-col">
                                <label for="email" class="hidden">E-Mail</label>
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    placeholder="E-Mail"
                                    class="w-full py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white font-semibold focus:border-indigo-500 focus:outline-none"
                                />
                            </div>

                            <div class="flex flex-col">
                                <label for="tel" class="hidden">Telefonnummer</label>
                                <input
                                    type="tel"
                                    name="tel"
                                    id="tel"
                                    placeholder="Telefonnummer"
                                    class="w-full py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white font-semibold focus:border-indigo-500 focus:outline-none"
                                />
                            </div>

                            <div class="flex flex-col">
                                <label for="message" class="hidden">Nachricht</label>
                                <textarea
                                    name="message"
                                    id="message"
                                    placeholder="Ihre Nachricht"
                                    rows="4"
                                    class="w-full py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white font-semibold focus:border-indigo-500 focus:outline-none"
                                ></textarea>
                            </div>

                            <div data-netlify-recaptcha="true"></div>

                            <button
                                type="submit"
                                class="w-full md:w-auto bg-indigo-600 hover:bg-blue-dark text-white font-bold py-3 px-6 rounded-lg mt-3 hover:bg-indigo-500 transition ease-in-out duration-300"
                            >
                                Absenden
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</Layout>

<script>
    const form = document.querySelector('form');

    form?.addEventListener('submit', (e) => {
        e.preventDefault();

        const name = form.querySelector<HTMLInputElement>('#name')?.value;
        const email = form.querySelector<HTMLInputElement>('#email')?.value.replace(/\s/g, '');
        const tel = form.querySelector<HTMLInputElement>('#tel')?.value.replace(/\s/g, '');
        const message = form.querySelector<HTMLTextAreaElement>('#message')?.value;

        // Check values
        if (!name || !email || !tel || !message) {
            alert('Bitte füllen Sie alle Felder aus.');
            return;
        }

        if (email.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/g) === null) {
            alert('Bitte geben Sie eine gültige E-Mail-Adresse an.');
            return;
        }

        if (!tel.match(/^[0-9\-\+]{9,15}$/g)) {
            alert('Bitte geben Sie eine gültige Telefonnummer an.');
            return;
        }

        const formData: Record<string, string> = {
            name,
            email,
            tel,
            message,
        };

        fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData).toString(),
        })
            .then(() => alert('Form successfully submitted'))
            .catch((error) => alert(error));
    });
</script>
