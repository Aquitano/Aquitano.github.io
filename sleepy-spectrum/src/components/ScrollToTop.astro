<!-- Tailwind: centered, fixed on the bottom right, with a shadow -->
<button
    id="scroll-to-top"
    title="Go To Top"
    class="scroll-top fixed z-50 bottom-8 right-8 border-0 w-16 h-16 rounded-full drop-shadow-md text-white text-3xl font-bold"
    >&uarr;</button
>

<style lang="scss">
    .scroll-top {
        background: rgba(15, 20, 30, 0.5);
        opacity: 0;
        width: 46px;
        height: 46px;
        bottom: 14px;
        border: 0 none;
        border-radius: 23px;
    }
    .scroll-top:active {
        background: #0f141e;
    }
    .Fly-in-up,
    .Fly-in-down {
        animation: none;
        transition: none;
    }
    @media (prefers-reduced-motion: no-preference) {
        // Fly-in-up animation
        .Fly-in-up {
            animation-name: Fly-in-down;
            animation-duration: 1.2s;
            animation-fill-mode: forwards;
        }

        // Fly-in-down animation
        .Fly-out-down {
            animation-name: Fly-out-down;
            animation-duration: 1.2s;
            animation-fill-mode: forwards;
        }
        @keyframes Fly-out-down {
            0% {
                opacity: 1;
                filter: blur(2px);
                transform: translateY(0);
                transition: opacity 0.5s ease-out, transform 0.4s ease-out;
            }
            100% {
                opacity: 0;
                visibility: hidden;
                transform: translateY(25%);
                filter: blur(0);
            }
        }
    }
</style>

<script>
    window.addEventListener('scroll', () => {
        // Distance from top of page
        const scroll = document.documentElement.scrollTop || document.body.scrollTop;
        const scrollButton = document.querySelector('#scroll-to-top');

        if (scroll > 1000) {
            scrollButton?.classList.add('Fly-in-up');
            scrollButton?.classList.remove('Fly-out-down');
        } else {
            if (scrollButton?.classList.contains('Fly-in-up')) {
                scrollButton?.classList.add('Fly-out-down');
                scrollButton?.classList.remove('Fly-in-up');
            }
        }
    });

    document.querySelector('#scroll-to-top')?.addEventListener('click', goToTop);

    function goToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth',
        });
    }
</script>
