---
import AllProducts from '../components/AllProducts.astro';
import Header from '../components/Header.astro';
import HomeTop from '../components/HomeTop.astro';
import Loader from '../components/Loader.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import Layout from '../layouts/IndexLayout.astro';
---

<Layout title="Breindl Thomas | Portfolio">
    <body>
        <!-- Loader -->
        <Loader />
        <!-- Header -->
        <Header active="Home" />

        <!-- Scroll to top button -->
        <ScrollToTop />

        <div id="Welcome">
            <HomeTop />
            <!-- All products! -->
            <AllProducts />
            <section class="quick-contact">
                <div class="wrapper i-v">
                    <span style="text-align: center"
                        ><h1>Kontaktiere mich!</h1>
                        <br />
                        <ul class="social-links" style="list-style-type: none">
