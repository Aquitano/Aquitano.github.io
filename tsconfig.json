{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "NodeNext",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@src/*": ["src/*"]
        },
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": ["src/**/*", "public/**/*"]
}
